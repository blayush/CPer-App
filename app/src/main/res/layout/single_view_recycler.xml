<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_marginTop="15dp"
    android:background="#0B719F"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/contest_icon_layout"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="-30dp"
        android:layout_weight="1"
        android:elevation="30dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="9dp"
            app:cardBackgroundColor="#B2BFCD"
            app:cardCornerRadius="6dp"
            app:cardElevation="8dp">

            <ImageView
                android:id="@+id/contest_icon_imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:contentDescription="@string/contest_platform_icon"
                app:srcCompat="@drawable/ic_codeforces_logo"
                tools:ignore="ImageContrastCheck" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="320dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginStart="-30dp"
        android:layout_marginEnd="6dp"
        app:cardBackgroundColor="#4B3B61"
        app:cardCornerRadius="10dp"
        app:cardElevation="20dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/contest_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70.5dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="@string/educational_codeforces_round_122"
                android:textColor="#F8E4E4"
                android:textSize="12.8sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="72dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/gfs_didot"
                android:text="@string/start_time"
                android:textColor="#F8E4E4"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="72dp"
                android:layout_marginTop="7dp"
                android:fontFamily="@font/gfs_didot"
                android:text="@string/end_time"
                android:textColor="#F8E4E4"
                android:textSize="13.12sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>