<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_marginTop="15dp"
    android:background="#0B719F"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/contest_icon_layout"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="-30dp"
        android:layout_weight="1"
        android:elevation="30dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/contest_icon_cardView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp"
            app:cardBackgroundColor="#B2BFCD"
            app:cardCornerRadius="6dp"
            app:cardElevation="8dp">

            <ImageView
                android:id="@+id/contest_icon_imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:contentDescription="@string/contest_platform_icon"
                tools:ignore="ImageContrastCheck" />

            <TextView
                android:id="@+id/contest_status_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/bentham"
                android:text="@string/running"
                android:textColor="#514343"
                android:textSize="11sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    z<androidx.cardview.widget.CardView
        android:layout_width="320dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginStart="-30dp"
        android:layout_marginEnd="6dp"
        app:cardBackgroundColor="#4B3B61"
        app:cardCornerRadius="10dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/contest_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70.5dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="@string/educational_codeforces_round_122"
                android:textColor="#F8E4E4"
                android:textSize="12.23sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="71dp"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gfs_didot"
                    android:text="@string/start_time"
                    android:textColor="#F8E4E4"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/start_time_text_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/gfs_didot"
                    android:textColor="#F8E4E4"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="71dp"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gfs_didot"
                    android:text="@string/end_time"
                    android:textColor="#F8E4E4"
                    android:textSize="12.61sp" />

                <TextView
                    android:id="@+id/end_time_textView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/gfs_didot"
                    android:textColor="#F8E4E4"
                    android:textSize="12.61sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="72dp"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gfs_didot"
                    android:text="@string/duration"
                    android:textColor="#F8E4E4"
                    android:textSize="13.12sp" />

                <TextView
                    android:id="@+id/duration_textView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/gfs_didot"
                    android:textColor="#F8E4E4"
                    android:textSize="13.12sp" />
            </LinearLayout>

        </LinearLayout>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="7.4dp"
        android:layout_marginBottom="6dp"
        android:fontFamily="@font/abhaya_libre"
        android:text="@string/_2_days_to_go"
        android:textColor="#B5AFAF"
        android:textSize="9.3sp"
        android:textStyle="bold" />

</androidx.cardview.widget.CardView>
</LinearLayout>